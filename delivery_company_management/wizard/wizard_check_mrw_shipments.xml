<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_check_mrw_shipments_form" model="ir.ui.view">
        <field name="name">Wizard check mrw shipments</field>
        <field name="model">delivery.check.mrw.shipments.wizard</field>
        <field name="arch" type="xml">
            <form string="Check MRW shipments">
                <group>
                    <field name="file_excel"/>
                </group>
                <footer>
                    <button name="check_mrw_file" string="Check" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_wizard_check_mrw_shipments" model="ir.actions.act_window">
       <field name="name">Wizard check MRW shipments</field>
       <field name="type">ir.actions.act_window</field>
       <field name="res_model">delivery.check.mrw.shipments.wizard</field>
       <field name="view_type">form</field>
       <field name="view_mode">form</field>
       <field name="target">new</field>
    </record>
</odoo>