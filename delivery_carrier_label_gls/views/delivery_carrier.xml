<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_delivery_carrier_form" model="ir.ui.view">
    <field name="name">delivery.carrier.form</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
    <field name="arch" type="xml">
      <page name="destination" position="after">
        <page
          string="Configuration"
          name="configuration"
          group='base.group_system'
          attrs='{"invisible": [("delivery_type", "!=", "gls")]}'
        >
          <group>
            <group>
              <field
                name="gls_url"
                attrs="{'required': [('delivery_type', '=', 'gls'), ('prod_environment', '=', True)]}"
              />
              <field
                name="gls_url_test"
                attrs="{'required': [('delivery_type', '=', 'gls'), ('prod_environment', '=', False)]}"
              />
              <field
                name="gls_label_format"
                attrs="{'required': [('delivery_type', '=', 'gls')]}"
              />
              <field name="gls_label_template" />
            </group>
            <group>
              <field
                name="gls_login"
                attrs="{'required': [('delivery_type', '=', 'gls')]}"
              />
              <field
                name="gls_password"
                attrs="{'required': [('delivery_type', '=', 'gls')]}"
              />
            </group>
            <group>
              <field
                name="gls_contact_id"
                attrs="{'required': [('delivery_type', '=', 'gls')]}"
              />
            </group>
            <group>
              <field
                name="gls_url_tracking"
                attrs="{'required': [('delivery_type', '=', 'gls')]}"
              />
            </group>
          </group>
        </page>
      </page>
    </field>
  </record>
</odoo>
