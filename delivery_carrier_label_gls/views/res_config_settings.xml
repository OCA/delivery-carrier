<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form (in delivery_carrier_label_gls)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='compute_shipping_costs_ups']" position="before">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="compute_shipping_costs_gls"
                >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">GLS Connector</span>
                        <a
                            href="https://www.odoo.com/documentation/16.0/applications/inventory_and_mrp/inventory/shipping/setup/third_party_shipper.html"
                            title="Documentation"
                            class="o_doc_link"
                            target="_blank"
                        />
                        <div class="text-muted">
                            Compute shipping costs and ship with GLS
                        </div>
                        <div class="content-group">
                            <div class="mt8">
                                <button
                                    name="%(base_delivery_carrier_label.action_carrier_account)d"
                                    icon="fa-arrow-right"
                                    type="action"
                                    string="GLS Carrier Account"
                                    class="btn-link"
                                    context="{'search_default_delivery_type': 'gls'}"
                                />
                                <button
                                    name="%(delivery.action_delivery_carrier_form)d"
                                    icon="fa-arrow-right"
                                    type="action"
                                    string="GLS Shipping Methods"
                                    class="btn-link"
                                    context="{'search_default_delivery_type': 'gls'}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
