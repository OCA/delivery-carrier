<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='inventory']/group[@name='inventory']/group[@name='group_lots_and_weight']/div[@name='volume']"
                position="after"
            >
                <field name="computed_prohibited_shipping_means_ids" invisible="True" />
                <label for="prohibited_shipping_means_ids" />
                <div name="prohibited_shipping_means">
                    <field
                        name="prohibited_shipping_means_ids"
                        widget="many2many_tags"
                    />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
