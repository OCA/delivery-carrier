<odoo>
    <record id="stock_picking_delivery_view_form" model="ir.ui.view">
        <field name="name">Stock Picking Delivery Wizard Form</field>
        <field name="model">stock.picking.delivery</field>
        <field name="arch" type="xml">
            <form string="Process Delivery">
                <sheet>
                    <group>
                        <field name="picking_id" />
                        <field name="delivery_package_id" />
                        <field name="weight_tare" />
                        <field name="weight_net" />
                        <field name="weight_uom_id" />
                        <field name="weight_total" />
                    </group>
                    <group>
                        <field name="purchase_rate_id" />
                        <field name="rate_ids" />
                    </group>
                </sheet>
                <footer>
                    <button special="cancel"
                            string="Cancel"
                            class="pull-left" />
                    <button name="action_create"
                            type="object"
                            string="Create"
                            class="oe_highlight pull-right" />
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_picking_delivery_action" model="ir.actions.act_window">
        <field name="name">Stock Picking Delivery Wizard Action</field>
        <field name="res_model">stock.picking.delivery</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
