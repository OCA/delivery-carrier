<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Configuration" name="dhl_parcel_de_configuration" attrs="{'invisible': [('delivery_type', '!=', 'dhl_parcel_de_provider')]}">
                    <group>
                        <group>
                            <field name="company_id" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_parcel_de_provider_package_id" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_weight_uom" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_services_name" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_account_no" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_procedure_no" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                            <field name="dhl_participation_no" attrs="{'required': [('delivery_type', '=', 'dhl_parcel_de_provider')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


</odoo>
