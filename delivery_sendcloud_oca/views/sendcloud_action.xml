<odoo>

    <record id="sendcloud_action_tree" model="ir.ui.view">
        <field name="model">sendcloud.action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" />
                <field name="message_type" />
                <field name="action" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="exitcode" />
                <field name="error_on_parsing" />
                <field name="is_processed" />
            </tree>
        </field>
    </record>

    <record id="sendcloud_action_form" model="ir.ui.view">
        <field name="model">sendcloud.action</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="reparse_message"
                        type="object"
                        string="Re-parse message"
                        invisible="message_type != 'received'"
                    />
                </header>
                <group>
                    <group>
                        <field name="create_date" />
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="message_type" />
                        <field name="record_id" />
                    </group>
                    <group>
                        <field name="response_time" />
                        <field name="exitcode" />
                        <field name="action" />
                        <field
                            name="error_on_parsing"
                            invisible="message_type != 'received'"
                        />
                        <field name="error_message" invisible="not error_on_parsing" />
                        <field name="is_processed" />
                        <field
                            name="date_last_success"
                            readonly="1"
                            invisible="error_on_parsing"
                        />
                    </group>
                </group>
                <label for="message" />
                <field name="message" />
                <label for="sent_payload" />
                <field name="sent_payload" />
            </form>
        </field>
    </record>

    <record id="action_sendcloud_action" model="ir.actions.act_window">
        <field name="name">Sendcloud Actions</field>
        <field name="res_model">sendcloud.action</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
