<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="delivery_notification" model="mail.template">
        <field name="name">Delivery State Notification to Customer</field>
        <field name="model_id" ref="delivery.model_stock_picking" />
        <field name="partner_to">{{ (object.sale_id.partner_id.id or object.partner_id.id) }}</field>
        <field name="subject">{{ object.company_id.name }} - Your order has been shipped by {{ object.carrier_id.name }}</field>
        <field name="body_html" type="html">
<div>
    <t t-set="partner" t-value="object.sale_id.partner_id or object.partner_id" />
    <p>
        Hello, <t t-out="partner.name" />.
    </p>
    <p>
        We are glad to inform you that your order has been shipped by ${object.carrier_id.name}.
        <t t-if="object.carrier_tracking_ref">
            Your tracking reference is
            <strong>
            <t t-if="object.carrier_tracking_url">
                <t t-set="multiple_carrier_tracking" t-value="object.get_multiple_carrier_tracking()" />
                <t t-if="multiple_carrier_tracking">
                    <t t-foreach="multiple_carrier_tracking" t-as="line">
                        <br/><a t-attf-href="{{ line[1] }}" target="_blank" t-out="line[0]" />
                    </t>
                </t>
                <t t-else="">
                    <a t-attf-href="{{ object.carrier_tracking_url }}" target="_blank" t-out="object.carrier_tracking_ref" />.
                </t>
            </t>
            <t t-else="">
                <t t-out="object.carrier_tracking_ref" />.
            </t>
            </strong>
        </t>
        <br/><br/>
        Thank you,<br/>
        <t t-if="user and user.signature" t-out="user.signature" />
    </p>
</div>
        </field>
        <field name="lang">{{ (object.sale_id.partner_id.lang or object.partner_id.lang) }}</field>
        <field name="auto_delete" eval="True" />
    </record>
</odoo>
