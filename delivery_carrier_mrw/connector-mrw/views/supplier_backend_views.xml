<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_supplier_backend_tree" model="ir.ui.view">
        <field name="name">Supplier backend</field>
        <field name="model">supplier.backend</field>
        <field name="arch" type="xml">
            <tree string="Supplier Backend">
                <field name="name"/>
                <field name="product_prefix"/>
                <field name="discount"/>
            </tree>
        </field>
    </record>

    <record id="view_supplier_backend_form" model="ir.ui.view">
        <field name="name">supplier.backend.form</field>
        <field name="model">supplier.backend</field>
        <field name="arch" type="xml">
            <form>
                <group><field name="name"/></group>
                <group><field name="no_product_sync"/></group>
                <group><field name="supplier_id"/></group>
                <group><field name="warehouse_id"/></group>
                <group><field name="product_prefix"/></group>
                <group><field name="delay"/></group>
                <group><field name="discount"/></group>
                <group><field name="team_id"/></group>
                <group><field name="product_binding_ids"/></group>
                <group><field name="importer_ids"/></group>

                <group>
                    <button string="Execute"
                                type="object"
                                name="execute_backend"
                                class="oe_highlight"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_supplier_backend" model="ir.actions.act_window">
        <field name="name">Supplier Backends</field>
        <field name="res_model">supplier.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_supplier_backend_tree"/>
    </record>

</odoo>