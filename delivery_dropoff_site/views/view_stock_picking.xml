<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_picking_tree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="final_shipping_partner_id" />
            </field>
        </field>
    </record>
    <record id="view_stock_picking_search" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="final_shipping_partner_id" />
                <filter
                    name="group_final_shipping_partner_id"
                    string="Final Recipient"
                    context="{'group_by':'final_shipping_partner_id'}"
                />
            </field>
        </field>
    </record>
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="final_shipping_partner_id" />
            </field>
        </field>
    </record>
</odoo>
